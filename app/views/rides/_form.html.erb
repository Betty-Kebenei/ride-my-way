<%= form_with(model: ride, local: true, class: "form-horizontal") do |form| %>
  <% if ride.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ride.errors.count, "error") %> prohibited this ride from being saved:</h2>

      <ul>
      <% ride.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-3 col-sm-12">
      <%= form.label :origin, class: "form-label"  %>
    </div>
    <div class="col-9 col-sm-12">
      <%= form.text_field :origin, class: "form-input" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-3 col-sm-12">
      <%= form.label :destination, class: "form-label" %>
    </div>
    <div class="col-9 col-sm-12">
      <%= form.text_field :destination, class: "form-input" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-3 col-sm-12">
      <%= form.label :destination, class: "form-label" %>
    </div>
    <div class="col-9 col-sm-12">
      <%= form.text_field :destination, class: "form-input" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-3 col-sm-12">
      <%= form.label :take_off, class: "form-label" %>
    </div>
    <div class="col-9 col-sm-12">
      <%= form.datetime_select :take_off, class: "form-input" %>
    </div>
  </div>

  <% if request.params[:format] == 'offer' %>
    <div class="form-group">
      <div class="col-3 col-sm-12">
        <%= form.label :number_of_people, class: "form-label" %>
      </div>
      <div class="col-9 col-sm-12">
        <%= form.number_field :number_of_people, class: "form-input" %>
      </div>
    </div>
  <% end %>

  <div class="form-group" style="visibility:hidden;">
    <div class="col-3 col-sm-12">
      <%= form.label :ride_type, class: "form-label" %>
    </div>
    <div class="col-9 col-sm-12">
      <%= form.text_field :ride_type, value: request.params[:format], class: "form-input" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
